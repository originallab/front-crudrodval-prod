import { NextResponse } from "next/server";
import mysql from "mysql2/promise";

const db = mysql.createPool({
  host: "localhost",
  user: "root",
  password: "",
  database: "cosmetica-neurone",
});

export async function GET() {
  try {
    const [result] = await db.query("SELECT 1");
    return NextResponse.json({ message: "Conexi√≥n exitosa", result });
  } catch (error) {
    return NextResponse.json({ message: "Error al conectar a la base de datos", error }, { status: 500 });
  }
}
